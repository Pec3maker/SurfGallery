<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SurfGallery" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorErrorContainer">@color/red_error</item>
        <item name="colorOnErrorContainer">@color/white</item>
        <item name="colorError">@color/red_error_text_label</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="snackbarStyle">@style/Widget.SurfGallery.Components.SnackBarTheme</item>
        <item name="snackbarTextViewStyle">@style/Widget.SurfGallery.Components.SnackBarTextViewTheme</item>
    </style>
</resources>